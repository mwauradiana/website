    style.
      .loading-screen {
      position: fixed;
      z-index: 100;
      width: 100%;
      height: 100%;
      background-color: white;
      transition: all 0.5s ease-in-out;
      opacity: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      opacity: 0.95;
      }
      .loading-icon {
      width: 300px;
      height: 100px;
      background-color: #eeeeee;
      display: flex;
      justify-content: center;
      align-items: center;
      }
      .loading-part {
      width: 24px;
      height: 24px;
      margin: 0 5%;
      border-radius: 50%;
      background-color: #282828;
      animation: load-animation 1s ease-in-out infinite;
      }
      .loading-part:nth-child(1) {
      animation-delay: 0.2s;
      }
      .loading-part:nth-child(2) {
      animation-delay: 0.4s;
      }
      .loading-part:nth-child(3) {
      animation-delay: 0.6s;
      }
      .loading-part:nth-child(4) {
      animation-delay: 0.8s;
      }
      /*Contact Card*/
      .contact-card {
      width: 100%;
      height: auto;
      display: flex;
      flex-flow: column;
      align-items: center;
      justify-content: space-around;
      background-color: rgba(238, 238, 238, 0.98);
      border-bottom-left-radius: 4px;
      border-bottom-right-radius: 4px;
      position: fixed;
      z-index: 50;
      top: 0;
      transition: all 0.3s ease-in-out;
      transform: translate3d(0px, -200%, 0px);
      }
      #location-marker {
      width: 30px;
      margin: auto;
      }
      .contact-card img {
      width: 100px;
      height: 100px;
      border-radius: 4px;
      margin-top: 10px;
      }
      .contact-card-address {
      height: 120px;
      /*background-color: pink;*/
      display: flex;
      flex-direction: column;
      text-align: center;
      }
      .contact-card-address h4 {
      margin: auto;
      }
      .contact-card-address h3 {
      text-align: center;
      font-weight: 400;
      }
      .contact-card-button {
      display: block;
      border: 2px solid #282828;
      border-radius: 6px;
      padding: 12px 40px;
      text-align: center;
      margin: 20% 0;
      transition: all 0.2s ease-in-out;
      }
      .contact-card-button:hover {
      color: white;
      background-color: #282828;
      transform: scale(1.1);
      }
      .exit-menu {
      background-color: rgba(229, 115, 115, 1);
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      margin-bottom: 10px;
      transition: all 0.2s ease-in-out;
      }
      .exit-menu:hover {
      transform: scale(1.1);
      cursor: pointer;
      }
      .exit-menu #exit-icon {
      width: 15px;
      margin: 11px;
      }
      @media(min-width: 700px) {
      .contact-card {
      flex-flow: row;
      }
      .contact-card-address {
      height: 150px;
      }
      .contact-card img {
      width: 200px;
      height: 200px;
      margin: 10% 0;
      display: block;
      }
      #location-marker {
      margin-right: auto;
      width: 40px;
      }
      .contact-card-address h3 {
      text-align: left;
      }
      .exit-menu {
      margin-bottom: 0;
      }
      }
      @keyframes load-animation {
      0% {
      transform: translateY(0px);
      }
      50% {
      transform: translateY(-15px) scale(1.2);
      }
      }
